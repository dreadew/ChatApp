{
	"Serilog": {
		"Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
		"MinimumLevel": {
			"Default": "Warning",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "../ChatApp/logs/log.txt",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
					"rollingInterval": "Day"
				}
			}
		],
		"Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
	},
	"ConnectionStrings": {
		"PostgresConnection": "Host=localhost;Database=ChatDb;Username=postgres;Password=chat-password",
		"Redis": "localhost:6379"
	},
	"JwtOptions": {
		"SecretKey": "secretkey123secretkey123",
		"ExpiresHours": "1"
	},
	"FrontendOrigin": "http://localhost:3000",
	"AllowedHosts": "*"
}
